otu <- readRDS('data/seq_table.RDS')
tax <- readRDS('data/tax_table.RDS')
sam <- read.csv('data/Data_for_bacterial_OTUs.csv')
sam <- sam[,-c(1,2)]
row.names(sam) <- sam$Sample.name

phyloseq_obj <- phyloseq(otu_table(otu, taxa_are_rows = TRUE), tax_table(tax), sample_data(sam))

saveRDS(phyloseq_obj, 'data/bacteria_phyloseq.RDS')


